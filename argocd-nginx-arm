apiVersion: apps/v1
kind: Deployment
metadata:
  name: nginx-arm
  labels:
    app: nginx-arm
spec:
  replicas: 2
  selector:
    matchLabels:
      app: nginx-arm
  template:
    metadata:
      labels:
        app: nginx-arm
    spec:
      containers:
      - name: nginx
        image: arm64v8/nginx:latest
        ports:
        - containerPort: 80
---
apiVersion: v1
kind: Service
metadata:
  name: nginx-arm
spec:
  selector:
    app: nginx-arm
  ports:
    - protocol: TCP
      port: 80
      targetPort: 80
